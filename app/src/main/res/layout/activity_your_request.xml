<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".yourmatchrequest.list.YourRequestActivity"
    android:padding="16dp">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24_black" />

    <TextView
        android:id="@+id/tvYourRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/back"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/your_matches_request"
        android:textColor="@color/black"
        android:textSize="40sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvYourRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvYourRequest"
        android:layout_marginTop="16dp" />

</RelativeLayout>